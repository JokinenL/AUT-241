<?xml version="1.0" ?>

<robot xmlns:xacro="http://ros.org/wiki/xacro">
	<xacro:macro name="motoman_sia20d_gripper" params="prefix">

		<xacro:include filename="$(find motoman_sia20d_support)/urdf/sia20d_macro.xacro" />
		<xacro:include filename="$(find wsg50_gripper)/urdf/wsg_50.urdf.xacro" />

		<xacro:motoman_sia20d prefix="${prefix}"/>
		<xacro:wsg_50_xacro name="${prefix}gripper" finger_length="0" finger_tip="0"/>

		<joint name="${prefix}robot_gripper" type="fixed">
			<origin xyz="0 0 0" rpy="0 0 0"/>
			<parent link="${prefix}tool0"/>
			<child link="${prefix}gripper_base_link"/>
		</joint>
	</xacro:macro>
</robot>

